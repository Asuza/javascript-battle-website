<div class="container">
  <div class="row">
    <div class="col-lg-12 text-center">
      <h2><%= get('githubHandle') %></h2>
        <hr class="star-primary">
    </div>
  </div> 
  <div class="row">
    <div class="btn-group btn-group-justified">
      <div class="general btn-group">
        <button type="button" class="btn btn-default settings">Settings</button>
      </div>
      <div class="active rules btn-group">
        <button type="button" class="btn btn-default recentStats">Recent Stats</button>
      </div>
      <div class="btn-group improve">
        <button type="button" class="btn btn-default lifetimeStats">Lifetime Stats</button>
      </div>
      <div class="btn-group improve">
        <button type="button" class="btn btn-default averageStats">Average Stats</button>
      </div>
    </div>
  </div>  
    <table class="table table-striped table-bordered table-responsive lifetime-table">
      <tr class="lifetime-table-header">
        <td>Category</td>
        <td>Stats</td>
      </tr>
      <tr>
        <td>Kills</td> 
        <td><%= get('lifetimeStats').kills %></td>
      </tr>
      <tr>
        <td>Deaths</td> 
        <td><%= get('lifetimeStats').deaths %></td>
      </tr>
      <tr>
        <td>Damage Dealt</td>
        <td><%= get('lifetimeStats').damageDealt %></td>
      </tr>
      <tr>
        <td>Mines Captured</td> 
        <td><%= get('lifetimeStats').minesCaptured %></td>
      </tr>
      <tr>
        <td>Diamonds Earned</td>
        <td><%= get('lifetimeStats').diamondsEarned %></td>
      </tr>
        <td>Health Recovered</td>
        <td><%= get('lifetimeStats').healthRecovered %></td>
      </tr>
      <tr>
        <td>Graves Robbed</td>
        <td><%= get('lifetimeStats').gravesRobbed %></td>
      </tr>
      <tr>
        <td>Wins</td>
        <td><%= get('lifetimeStats').wins %></td>
      </tr>
      <tr>
        <td>Losses</td>
        <td><%= get('lifetimeStats').losses %></td>
      </tr>
    </table>
    </div>
  </div>  
    <div class="text-center">
      <button type="button" class="btn btn-default btn-lg logoutButton">
        <a class="glyphicon glyphicon-log-out" href="/logout">Log-out</a> 
      </button>
    </div>
</div>